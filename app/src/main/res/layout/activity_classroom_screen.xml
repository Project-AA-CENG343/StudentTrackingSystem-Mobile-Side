<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/classroom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:text="@string/student_classroom"
        android:textAppearance="@style/student_info_green"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/classroom_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/classroom_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/classroom_name"
        android:layout_marginBottom="22dp"
        android:text="@string/student_classroom_info"
        android:textSize="23sp"
        android:textAppearance="@style/student_info_white"
        app:layout_constraintBottom_toTopOf="@+id/classroom_announcements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/classroom_announcements"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:drawableLeft="@drawable/baseline_event"
        android:text="Duyurular"
        android:textSize="18sp"
        style="@style/PurpleButton"
        app:layout_constraintBottom_toTopOf="@+id/classroom_homeworks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/classroom_homeworks"
        android:layout_width="200dp"
        android:layout_height="54dp"
        android:layout_marginBottom="340dp"
        android:drawableLeft="@drawable/baseline_homework"
        android:text="Ã–devler"
        style="@style/PurpleButton"
        android:textSize="18sp"
        android:paddingEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>